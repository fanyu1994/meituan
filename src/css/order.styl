.order
    width: 359px
    margin 0 auto 
    background-color: #ffbd27
    .top
        width: 100%
        height: 50px
        position: fixed
        background-color: #ffbd27
        input 
            width: 90%
            line-height: 20px
            margin-top: 20px
            border-radius: 6px
            border-style none
        img 
            width: 14px
            position: absolute 
            left 25px
            top: 23px        
    .list
        width: 359px
        height: 30px
        background-color: white 
        display: flex
        flex-flow: row nowrap
        justify-content: space-between
        position: fixed
        top: 50px
        .tab
            width 60px 
            font-size: 12px
            line-height: 30px
        .active
            font-weight: 800
    .nothing
        height: 80px             
    .fade-enter-active,.fade-leave-active
        transition:opacity 0.3s ease 
    .fade-enter,.fade-leave-to
        opacity 0    